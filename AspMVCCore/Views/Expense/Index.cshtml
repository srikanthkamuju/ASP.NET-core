@model IEnumerable<AspMVCCore.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses Items List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Create New Expense</a>
        </div>
    </div>
    <br />
    @if(Model.Count() > 0)
     {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>ExpenseName</th>
                    <th>Amount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td width="30%">@item.ExpenseName</td>
                    <td width="30%">@item.Amount</td>
                    <td width="40%">
                        <div class="col-6 text-right">
                            <a asp-controller="Expense" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary">Update</a>
                            <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
     }
</div>
